@model InventoryManagement.WebUI.ViewModels.Inventory.InventoryDetailsViewModel
@{
    ViewData["Title"] = Model.PageTitle;
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row">
        <div class="col-12">
            <div class="page-header">
                <h1 class="page-title">
                    <i class="fas fa-box me-2"></i>@Model.PageTitle
                </h1>
                <p class="page-subtitle text-muted">@Model.PageSubtitle</p>
            </div>
        </div>
    </div>

    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            @foreach (var item in Model.BreadcrumbItems)
            {
                @if (item.url != null)
                {
                    <li class="breadcrumb-item">
                        <a href="@item.url">@item.text</a>
                    </li>
                }
                else
                {
                    <li class="breadcrumb-item active" aria-current="page">@item.text</li>
                }
            }
        </ol>
    </nav>

    <!-- Inventory Details Card -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Inventory Details
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Product Information -->
                        <div class="col-md-6">
                            <h6 class="text-primary mb-3">
                                <i class="fas fa-cube me-2"></i>Product Information
                            </h6>
                            
                            <div class="row mb-3">
                                <div class="col-sm-4">
                                    <strong>@Html.DisplayNameFor(model => model.ProductName):</strong>
                                </div>
                                <div class="col-sm-8">
                                    @Html.DisplayFor(model => model.ProductName)
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-4">
                                    <strong>@Html.DisplayNameFor(model => model.ProductSku):</strong>
                                </div>
                                <div class="col-sm-8">
                                    <code>@Html.DisplayFor(model => model.ProductSku)</code>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-4">
                                    <strong>@Html.DisplayNameFor(model => model.CategoryName):</strong>
                                </div>
                                <div class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.CategoryName))
                                    {
                                        <span class="badge bg-secondary">@Html.DisplayFor(model => model.CategoryName)</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not specified</span>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Inventory Information -->
                        <div class="col-md-6">
                            <h6 class="text-success mb-3">
                                <i class="fas fa-warehouse me-2"></i>Inventory Information
                            </h6>
                            
                            <div class="row mb-3">
                                <div class="col-sm-4">
                                    <strong>@Html.DisplayNameFor(model => model.Quantity):</strong>
                                </div>
                                <div class="col-sm-8">
                                    <span class="badge bg-info fs-6">@Html.DisplayFor(model => model.Quantity) units</span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-4">
                                    <strong>@Html.DisplayNameFor(model => model.Location):</strong>
                                </div>
                                <div class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.Location))
                                    {
                                        <i class="fas fa-map-marker-alt me-1"></i>@Html.DisplayFor(model => model.Location)
                                    }
                                    else
                                    {
                                        <span class="text-muted">Location not specified</span>
                                    }
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-4">
                                    <strong>@Html.DisplayNameFor(model => model.TransactionTypeName):</strong>
                                </div>
                                <div class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.TransactionTypeName))
                                    {
                                        <span class="badge bg-primary">@Html.DisplayFor(model => model.TransactionTypeName)</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <!-- Transaction Information -->
                    <div class="row">
                        <div class="col-12">
                            <h6 class="text-info mb-3">
                                <i class="fas fa-clock me-2"></i>Transaction Information
                            </h6>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="row mb-3">
                                <div class="col-sm-4">
                                    <strong>@Html.DisplayNameFor(model => model.TransactionDate):</strong>
                                </div>
                                <div class="col-sm-8">
                                    @Html.DisplayFor(model => model.TransactionDate)
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-4">
                                    <strong>@Html.DisplayNameFor(model => model.DaysSinceTransaction):</strong>
                                </div>
                                <div class="col-sm-8">
                                    @{
                                        var badgeClass = Model.DaysSinceTransaction <= 7 ? "bg-success" : 
                                                        Model.DaysSinceTransaction <= 30 ? "bg-warning" : "bg-danger";
                                    }
                                    <span class="badge @badgeClass">@Model.DaysSinceTransaction days ago</span>
                                    @if (Model.IsRecentTransaction)
                                    {
                                        <i class="fas fa-check-circle text-success ms-2" title="Recent transaction"></i>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="row mb-3">
                                <div class="col-sm-4">
                                    <strong>@Html.DisplayNameFor(model => model.CreatedBy):</strong>
                                </div>
                                <div class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.CreatedBy))
                                    {
                                        <i class="fas fa-user me-1"></i>@Html.DisplayFor(model => model.CreatedBy)
                                    }
                                    else
                                    {
                                        <span class="text-muted">System</span>
                                    }
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-4">
                                    <strong>@Html.DisplayNameFor(model => model.CreatedDate):</strong>
                                </div>
                                <div class="col-sm-8">
                                    @Html.DisplayFor(model => model.CreatedDate)
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Notes Section -->
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <hr class="my-4">
                        <div class="row">
                            <div class="col-12">
                                <h6 class="text-secondary mb-3">
                                    <i class="fas fa-sticky-note me-2"></i>@Html.DisplayNameFor(model => model.Notes)
                                </h6>
                                <div class="alert alert-light">
                                    @Html.DisplayFor(model => model.Notes)
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Last Modified -->
                    @if (Model.LastModified.HasValue)
                    {
                        <hr class="my-4">
                        <div class="row">
                            <div class="col-md-6">
                                <small class="text-muted">
                                    <i class="fas fa-edit me-1"></i>
                                    <strong>Last Modified:</strong> @Model.LastModified.Value.ToString("MMM dd, yyyy 'at' h:mm tt")
                                </small>
                            </div>
                            <div class="col-md-6 text-end">
                                @if (!string.IsNullOrEmpty(Model.ModifiedBy))
                                {
                                    <small class="text-muted">
                                        <strong>Modified By:</strong> @Model.ModifiedBy
                                    </small>
                                }
                            </div>
                        </div>
                    }
                </div>

                <!-- Action Buttons -->
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <div>
                            <a href="@Url.Action("Index", "Inventory")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Back to Inventory List
                            </a>
                        </div>
                        <div>
                            <a href="@Url.Action("StockIn", "Inventory", new { productId = Model.Id })" class="btn btn-success me-2">
                                <i class="fas fa-plus me-1"></i>Stock In
                            </a>
                            <a href="@Url.Action("StockOut", "Inventory", new { productId = Model.Id })" class="btn btn-warning me-2">
                                <i class="fas fa-minus me-1"></i>Stock Out
                            </a>
                            <a href="@Url.Action("Adjust", "Inventory", new { id = Model.Id })" class="btn btn-info">
                                <i class="fas fa-edit me-1"></i>Adjust Inventory
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
