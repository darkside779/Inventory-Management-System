@model InventoryManagement.WebUI.ViewModels.Inventory.StockReservationViewModel
@{
    ViewData["Title"] = Model.PageTitle;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Page Header -->
            <div class="page-header mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Inventory")">Inventory</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Reserve Stock</li>
                    </ol>
                </nav>
                <h1 class="page-title">@Model.PageTitle</h1>
                <p class="text-muted">Reserve inventory for pending orders or allocations</p>
            </div>

            <div class="row">
                <div class="col-lg-8">
                    <!-- Stock Reservation Form -->
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-bookmark me-2"></i>Stock Reservation Details
                            </h5>
                        </div>
                        <div class="card-body">
                            <form asp-action="Reserve" method="post" class="needs-validation" novalidate>
                                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                                <!-- Product and Warehouse Selection -->
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label asp-for="ProductId" class="form-label">Product <span class="text-danger">*</span></label>
                                        <select asp-for="ProductId" class="form-select" id="productSelect" required>
                                            <option value="">Select a product...</option>
                                            @if (Model.ProductId > 0)
                                            {
                                                <option value="@Model.ProductId" selected>@Model.ProductName</option>
                                            }
                                        </select>
                                        <span asp-validation-for="ProductId" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="WarehouseId" class="form-label">Warehouse <span class="text-danger">*</span></label>
                                        <select asp-for="WarehouseId" class="form-select" id="warehouseSelect" required>
                                            <option value="">Select a warehouse...</option>
                                            @if (Model.WarehouseId > 0)
                                            {
                                                <option value="@Model.WarehouseId" selected>@Model.WarehouseName</option>
                                            }
                                        </select>
                                        <span asp-validation-for="WarehouseId" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Current Stock Info -->
                                @if (Model.ProductId > 0 && Model.WarehouseId > 0)
                                {
                                    <div class="alert alert-info">
                                        <h6 class="alert-heading">Current Stock Information</h6>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <strong>Product:</strong> @Model.ProductName<br>
                                                <strong>Warehouse:</strong> @Model.WarehouseName
                                            </div>
                                            <div class="col-md-6">
                                                <strong>Available for Reservation:</strong> <span class="badge bg-success">@Model.AvailableQuantity.ToString("N0")</span>
                                            </div>
                                        </div>
                                    </div>
                                }

                                <!-- Reservation Details -->
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label asp-for="Quantity" class="form-label">Reserve Quantity <span class="text-danger">*</span></label>
                                        <input asp-for="Quantity" class="form-control" type="number" min="1" 
                                               placeholder="Enter quantity to reserve" required
                                               max="@Model.AvailableQuantity" onchange="updateReservationImpact()">
                                        <div class="form-text">
                                            Maximum available: @Model.AvailableQuantity.ToString("N0") units
                                        </div>
                                        <span asp-validation-for="Quantity" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Reservation Impact</label>
                                        <div class="border rounded p-2">
                                            <div class="d-flex justify-content-between">
                                                <span>Quantity to reserve:</span>
                                                <span id="reserveQuantity" class="badge bg-warning">@Model.Quantity.ToString("N0")</span>
                                            </div>
                                            <div class="d-flex justify-content-between">
                                                <span>Remaining available:</span>
                                                <span id="remainingAvailable" class="badge bg-success">@((Model.AvailableQuantity - Model.Quantity).ToString("N0"))</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Reason" class="form-label">Reason for Reservation <span class="text-danger">*</span></label>
                                    <textarea asp-for="Reason" class="form-control" rows="3" 
                                              placeholder="Enter reason for stock reservation (e.g., pending order, allocation)" required></textarea>
                                    <span asp-validation-for="Reason" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ReferenceNumber" class="form-label">Reference Number</label>
                                    <input asp-for="ReferenceNumber" class="form-control" 
                                           placeholder="Optional reference number (e.g., order ID, customer code)">
                                    <div class="form-text">
                                        This helps track what the reservation is for
                                    </div>
                                    <span asp-validation-for="ReferenceNumber" class="text-danger"></span>
                                </div>

                                <!-- Form Actions -->
                                <div class="d-flex justify-content-end gap-2">
                                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                                        <i class="fas fa-times me-1"></i>Cancel
                                    </a>
                                    <button type="submit" class="btn btn-warning">
                                        <i class="fas fa-bookmark me-1"></i>Reserve Stock
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <!-- Reservation Guidelines -->
                    <div class="card">
                        <div class="card-header">
                            <h6 class="card-title mb-0">
                                <i class="fas fa-info-circle me-2"></i>Reservation Guidelines
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <h6 class="text-primary">Common Use Cases</h6>
                                <ul class="list-unstyled text-sm">
                                    <li><i class="fas fa-shopping-cart text-primary me-1"></i> Pending customer orders</li>
                                    <li><i class="fas fa-truck text-primary me-1"></i> Shipment preparation</li>
                                    <li><i class="fas fa-calendar text-primary me-1"></i> Scheduled allocations</li>
                                    <li><i class="fas fa-cogs text-primary me-1"></i> Production reservations</li>
                                </ul>
                            </div>
                            <div class="mb-3">
                                <h6 class="text-warning">Important Notes</h6>
                                <ul class="list-unstyled text-sm">
                                    <li><i class="fas fa-exclamation-triangle text-warning me-1"></i> Reserved stock cannot be sold</li>
                                    <li><i class="fas fa-clock text-warning me-1"></i> Reservations should be released when no longer needed</li>
                                    <li><i class="fas fa-user text-warning me-1"></i> Track reservations by reference number</li>
                                </ul>
                            </div>
                            <div class="alert alert-info">
                                <small>
                                    <i class="fas fa-lightbulb me-1"></i>
                                    Reserved quantities are excluded from available stock calculations but remain in total inventory.
                                </small>
                            </div>
                        </div>
                    </div>

                    <!-- Reservation History -->
                    <div class="card mt-3">
                        <div class="card-header">
                            <h6 class="card-title mb-0">
                                <i class="fas fa-history me-2"></i>Recent Reservations
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="text-center text-muted">
                                <i class="fas fa-bookmark fa-2x mb-2"></i>
                                <p class="mb-0">Recent reservation history will appear here</p>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Actions -->
                    <div class="card mt-3">
                        <div class="card-header">
                            <h6 class="card-title mb-0">
                                <i class="fas fa-bolt me-2"></i>Quick Actions
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a href="@Url.Action("Adjust")" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-plus-minus me-1"></i>Adjust Stock
                                </a>
                                <a href="@Url.Action("Transfer")" class="btn btn-outline-success btn-sm">
                                    <i class="fas fa-exchange-alt me-1"></i>Transfer Stock
                                </a>
                                <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-sm">
                                    <i class="fas fa-list me-1"></i>View All Inventory
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function updateReservationImpact() {
            const availableQty = @Model.AvailableQuantity;
            const reserveQty = parseInt(document.getElementById('Quantity').value) || 0;
            
            document.getElementById('reserveQuantity').textContent = reserveQty.toLocaleString();
            document.getElementById('remainingAvailable').textContent = (availableQty - reserveQty).toLocaleString();
            
            // Validate reservation quantity
            const quantityInput = document.getElementById('Quantity');
            if (reserveQty > availableQty) {
                quantityInput.classList.add('is-invalid');
                quantityInput.classList.remove('is-valid');
            } else if (reserveQty > 0) {
                quantityInput.classList.remove('is-invalid');
                quantityInput.classList.add('is-valid');
            }
        }

        // Bootstrap form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();

        // Initialize form
        document.addEventListener('DOMContentLoaded', function() {
            updateReservationImpact();
        });
    </script>
}
