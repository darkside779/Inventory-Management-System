@model InventoryManagement.WebUI.ViewModels.Product.DeleteProductViewModel
@{
    ViewData["Title"] = Model.PageTitle;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Page Header -->
            <div class="page-header mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        @foreach (var (text, url) in Model.BreadcrumbItems)
                        {
                            @if (url != null)
                            {
                                <li class="breadcrumb-item">
                                    <a href="@url">@text</a>
                                </li>
                            }
                            else
                            {
                                <li class="breadcrumb-item active" aria-current="page">@text</li>
                            }
                        }
                    </ol>
                </nav>
                <h2 class="page-title text-danger">@Model.PageTitle</h2>
                <p class="text-muted">@Model.PageSubtitle</p>
            </div>

            <!-- Delete Confirmation -->
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="card border-danger">
                        <div class="card-header bg-danger text-white">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-exclamation-triangle me-2"></i>Confirm Product Deletion
                            </h5>
                        </div>
                        <div class="card-body">
                            <!-- Warning Message -->
                            <div class="alert alert-warning" role="alert">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                <strong>Warning!</strong> @Model.WarningMessage
                            </div>

                            <!-- Product Details Summary -->
                            <div class="row">
                                <div class="col-md-6">
                                    <h6>Product Information:</h6>
                                    <table class="table table-borderless table-sm">
                                        <tr>
                                            <td class="fw-bold">Name:</td>
                                            <td>@Model.Product.Name</td>
                                        </tr>
                                        <tr>
                                            <td class="fw-bold">SKU:</td>
                                            <td>
                                                <span class="badge bg-light text-dark font-monospace">@Model.Product.SKU</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="fw-bold">Category:</td>
                                            <td>@Model.Product.CategoryName</td>
                                        </tr>
                                        <tr>
                                            <td class="fw-bold">Price:</td>
                                            <td>@Model.Product.Price.ToString("C")</td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-md-6">
                                    <h6>Impact Assessment:</h6>
                                    <ul class="list-unstyled">
                                        @if (Model.HasInventoryRecords)
                                        {
                                            <li class="text-warning">
                                                <i class="fas fa-exclamation-circle me-2"></i>
                                                Product has inventory records
                                            </li>
                                            <li class="text-info">
                                                <i class="fas fa-info-circle me-2"></i>
                                                Product will be marked as inactive
                                            </li>
                                        }
                                        else
                                        {
                                            <li class="text-danger">
                                                <i class="fas fa-trash me-2"></i>
                                                Product will be permanently deleted
                                            </li>
                                            <li class="text-muted">
                                                <i class="fas fa-check-circle me-2"></i>
                                                No inventory records found
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.Product.Description))
                            {
                                <div class="mt-3">
                                    <h6>Description:</h6>
                                    <p class="text-muted border-start border-3 border-secondary ps-3">
                                        @Model.Product.Description
                                    </p>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Confirmation Form -->
                    <div class="d-flex justify-content-between mt-4">
                        <a href="@Url.Action("Details", new { id = Model.Product.Id })" class="btn btn-secondary btn-lg">
                            <i class="fas fa-arrow-left me-2"></i>Cancel & Go Back
                        </a>
                        <div>
                            <form asp-action="Delete" method="post" style="display: inline;">
                                <input type="hidden" name="id" value="@Model.Product.Id" />
                                <button type="submit" class="btn btn-danger btn-lg" 
                                        onclick="return confirm('Are you absolutely sure you want to delete this product? This action cannot be undone.')">
                                    <i class="fas fa-trash me-2"></i>
                                    @if (Model.HasInventoryRecords)
                                    {
                                        <span>Deactivate Product</span>
                                    }
                                    else
                                    {
                                        <span>Delete Product</span>
                                    }
                                </button>
                            </form>
                        </div>
                    </div>

                    <!-- Additional Information -->
                    <div class="mt-4">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="card-title mb-0">
                                    <i class="fas fa-info me-2"></i>What happens when I delete this product?
                                </h6>
                            </div>
                            <div class="card-body">
                                @if (Model.HasInventoryRecords)
                                {
                                    <div class="row">
                                        <div class="col-md-6">
                                            <h6 class="text-warning">Soft Delete (Deactivation):</h6>
                                            <ul class="text-muted">
                                                <li>Product status changes to "Inactive"</li>
                                                <li>No longer appears in new transaction lists</li>
                                                <li>Existing inventory records remain intact</li>
                                                <li>Historical data is preserved</li>
                                                <li>Can be reactivated later if needed</li>
                                            </ul>
                                        </div>
                                        <div class="col-md-6">
                                            <h6 class="text-info">Data Preservation:</h6>
                                            <ul class="text-muted">
                                                <li>All transaction history preserved</li>
                                                <li>Inventory levels remain viewable</li>
                                                <li>Reporting data stays accurate</li>
                                                <li>Audit trail maintained</li>
                                                <li>Product can be found in searches</li>
                                            </ul>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="row">
                                        <div class="col-md-6">
                                            <h6 class="text-danger">Permanent Deletion:</h6>
                                            <ul class="text-muted">
                                                <li>Product record completely removed</li>
                                                <li>All product data permanently deleted</li>
                                                <li>Cannot be recovered after deletion</li>
                                                <li>SKU becomes available for reuse</li>
                                                <li>No impact on other system data</li>
                                            </ul>
                                        </div>
                                        <div class="col-md-6">
                                            <h6 class="text-success">Safe to Delete:</h6>
                                            <ul class="text-muted">
                                                <li>No inventory records exist</li>
                                                <li>No transaction history</li>
                                                <li>No dependent data found</li>
                                                <li>Clean removal from system</li>
                                                <li>No data integrity issues</li>
                                            </ul>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add additional confirmation for permanent deletion
        document.addEventListener('DOMContentLoaded', function() {
            const deleteForm = document.querySelector('form[asp-action="Delete"]');
            const hasInventory = @Model.HasInventoryRecords.ToString().ToLower();
            
            if (deleteForm && !hasInventory) {
                deleteForm.addEventListener('submit', function(e) {
                    const confirmed = confirm(
                        'FINAL WARNING: This will permanently delete the product and cannot be undone.\n\n' +
                        'Product: @Model.Product.Name\n' +
                        'SKU: @Model.Product.SKU\n\n' +
                        'Type "DELETE" to confirm:'
                    );
                    
                    if (confirmed) {
                        const userInput = prompt('Type "DELETE" to confirm permanent deletion:');
                        if (userInput !== 'DELETE') {
                            e.preventDefault();
                            alert('Deletion cancelled. You must type "DELETE" exactly to confirm.');
                        }
                    } else {
                        e.preventDefault();
                    }
                });
            }
        });
    </script>
}
