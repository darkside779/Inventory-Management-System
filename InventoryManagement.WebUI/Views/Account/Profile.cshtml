@model InventoryManagement.WebUI.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "Profile";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card">
            <div class="card-header">
                <h3 class="mb-0">
                    <i class="fas fa-user me-2"></i>User Profile
                </h3>
            </div>
            <div class="card-body">
                @if (TempData["StatusMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i>@TempData["StatusMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <strong><i class="fas fa-envelope me-1"></i>Email:</strong>
                    </div>
                    <div class="col-sm-9">
                        @Model.Email
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <strong><i class="fas fa-user me-1"></i>Username:</strong>
                    </div>
                    <div class="col-sm-9">
                        @Model.UserName
                    </div>
                </div>
                
                <div class="row mb-4">
                    <div class="col-sm-3">
                        <strong><i class="fas fa-user-tag me-1"></i>Roles:</strong>
                    </div>
                    <div class="col-sm-9">
                        @if (Model.Roles.Any())
                        {
                            @foreach (var role in Model.Roles)
                            {
                                <span class="badge bg-primary me-1">@role</span>
                            }
                        }
                        else
                        {
                            <span class="text-muted">No roles assigned</span>
                        }
                    </div>
                </div>
                
                <div class="d-flex gap-2">
                    <a asp-action="ChangePassword" class="btn btn-outline-primary">
                        <i class="fas fa-key me-1"></i>Change Password
                    </a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-home me-1"></i>Back to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
