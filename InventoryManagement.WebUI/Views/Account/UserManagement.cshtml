@model IEnumerable<InventoryManagement.WebUI.ViewModels.UserManagementViewModel>
@{
    ViewData["Title"] = "User Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-users me-2"></i>User Management</h2>
    <a asp-action="Register" class="btn btn-success">
        <i class="fas fa-user-plus me-1"></i>Add New User
    </a>
</div>

@if (Model.Any())
{
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th><i class="fas fa-envelope me-1"></i>Email</th>
                            <th><i class="fas fa-user me-1"></i>Username</th>
                            <th><i class="fas fa-user-tag me-1"></i>Roles</th>
                            <th><i class="fas fa-lock me-1"></i>Status</th>
                            <th><i class="fas fa-cogs me-1"></i>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>
                                    <i class="fas fa-envelope text-muted me-1"></i>
                                    @user.Email
                                </td>
                                <td>
                                    <i class="fas fa-user text-muted me-1"></i>
                                    @user.UserName
                                </td>
                                <td>
                                    @if (user.Roles.Any())
                                    {
                                        @foreach (var role in user.Roles)
                                        {
                                            <span class="badge bg-primary me-1">@role</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">No roles</span>
                                    }
                                </td>
                                <td>
                                    @if (user.IsLockedOut)
                                    {
                                        <span class="badge bg-danger">
                                            <i class="fas fa-lock me-1"></i>Locked Out
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check me-1"></i>Active
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <button type="button" class="btn btn-sm btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown">
                                            <i class="fas fa-user-tag me-1"></i>Manage Roles
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <form asp-action="ToggleRole" method="post" class="d-inline">
                                                    <input type="hidden" name="userId" value="@user.Id" />
                                                    <input type="hidden" name="role" value="Admin" />
                                                    <button type="submit" class="dropdown-item @(user.Roles.Contains("Admin") ? "active" : "")">
                                                        <i class="fas fa-@(user.Roles.Contains("Admin") ? "check" : "plus") me-1"></i>
                                                        @(user.Roles.Contains("Admin") ? "Remove" : "Add") Admin
                                                    </button>
                                                </form>
                                            </li>
                                            <li>
                                                <form asp-action="ToggleRole" method="post" class="d-inline">
                                                    <input type="hidden" name="userId" value="@user.Id" />
                                                    <input type="hidden" name="role" value="Manager" />
                                                    <button type="submit" class="dropdown-item @(user.Roles.Contains("Manager") ? "active" : "")">
                                                        <i class="fas fa-@(user.Roles.Contains("Manager") ? "check" : "plus") me-1"></i>
                                                        @(user.Roles.Contains("Manager") ? "Remove" : "Add") Manager
                                                    </button>
                                                </form>
                                            </li>
                                            <li>
                                                <form asp-action="ToggleRole" method="post" class="d-inline">
                                                    <input type="hidden" name="userId" value="@user.Id" />
                                                    <input type="hidden" name="role" value="Employee" />
                                                    <button type="submit" class="dropdown-item @(user.Roles.Contains("Employee") ? "active" : "")">
                                                        <i class="fas fa-@(user.Roles.Contains("Employee") ? "check" : "plus") me-1"></i>
                                                        @(user.Roles.Contains("Employee") ? "Remove" : "Add") Employee
                                                    </button>
                                                </form>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info text-center">
        <i class="fas fa-info-circle me-2"></i>
        No users found in the system.
    </div>
}
