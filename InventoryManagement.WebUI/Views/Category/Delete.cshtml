@model InventoryManagement.WebUI.ViewModels.Category.DeleteCategoryViewModel
@{
    ViewData["Title"] = Model.PageTitle;
    ViewData["PageTitle"] = Model.PageTitle;
    ViewData["PageSubtitle"] = Model.PageSubtitle;
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>Delete Category Confirmation
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Warning!</strong> This action cannot be undone. Are you sure you want to delete this category?
                </div>

                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Name)</dt>
                    <dd class="col-sm-9"><strong>@Model.Name</strong></dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Description)</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            @Model.Description
                        }
                        else
                        {
                            <span class="text-muted">No description</span>
                        }
                    </dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.ProductCount)</dt>
                    <dd class="col-sm-9">
                        @if (Model.ProductCount > 0)
                        {
                            <span class="badge bg-warning text-dark">@Model.ProductCount products</span>
                            <div class="mt-2">
                                <div class="alert alert-danger" role="alert">
                                    <i class="fas fa-times-circle me-2"></i>
                                    <strong>Cannot Delete:</strong> This category has @Model.ProductCount associated products. 
                                    You must remove or reassign all products before deleting this category.
                                </div>
                            </div>
                        }
                        else
                        {
                            <span class="badge bg-success">No products - Safe to delete</span>
                        }
                    </dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.CreatedAt)</dt>
                    <dd class="col-sm-9">@Model.CreatedAt.ToString("MMMM dd, yyyy")</dd>
                </dl>

                <hr>

                @if (Model.ProductCount == 0)
                {
                    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post" class="d-inline">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="@Url.Action("Index", "Category")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Cancel
                            </a>
                            <div>
                                <a href="@Url.Action("Details", "Category", new { id = Model.Id })" class="btn btn-info me-2">
                                    <i class="fas fa-eye me-2"></i>View Details
                                </a>
                                <button type="submit" class="btn btn-danger" 
                                        onclick="return confirm('Are you absolutely sure you want to delete this category? This action cannot be undone.')">
                                    <i class="fas fa-trash me-2"></i>Delete Category
                                </button>
                            </div>
                        </div>
                    </form>
                }
                else
                {
                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Index", "Category")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to Categories
                        </a>
                        <div>
                            <a href="@Url.Action("Index", "Product", new { categoryId = Model.Id })" class="btn btn-warning me-2">
                                <i class="fas fa-cubes me-2"></i>View Products in Category
                            </a>
                            <button type="button" class="btn btn-danger" disabled>
                                <i class="fas fa-trash me-2"></i>Cannot Delete
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add confirmation dialog for delete action
            $('form[asp-action="DeleteConfirmed"]').on('submit', function(e) {
                if (!confirm('⚠️ FINAL WARNING: This will permanently delete the category "' + '@Model.Name' + '". This action cannot be undone. Are you absolutely sure?')) {
                    e.preventDefault();
                    return false;
                }
            });
        });
    </script>
}
