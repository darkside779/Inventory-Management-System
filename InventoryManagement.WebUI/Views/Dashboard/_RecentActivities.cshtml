@model List<InventoryManagement.WebUI.ViewModels.Dashboard.RecentActivityViewModel>

@if (Model.Any())
{
    @foreach (var activity in Model)
    {
        <div class="activity-item">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <i class="@activity.Icon me-2"></i>
                    <strong>@activity.Description</strong>
                    @if (!string.IsNullOrEmpty(activity.ProductName))
                    {
                        <br><small class="text-muted">Product: @activity.ProductName</small>
                    }
                    @if (!string.IsNullOrEmpty(activity.CategoryName))
                    {
                        <br><small class="text-muted">Category: @activity.CategoryName</small>
                    }
                    <br><small class="text-muted">by @activity.UserName</small>
                </div>
                <div class="text-end">
                    <span class="@activity.BadgeClass">@activity.ActivityType</span>
                    <br><small class="text-muted">@activity.ActivityDate.ToString("MMM dd, HH:mm")</small>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="text-center py-4">
        <i class="fas fa-inbox fa-2x text-muted mb-3"></i>
        <p class="text-muted">No recent activities</p>
    </div>
}
