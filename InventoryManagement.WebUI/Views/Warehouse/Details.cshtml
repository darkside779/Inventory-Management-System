@model InventoryManagement.WebUI.ViewModels.Warehouses.WarehouseDetailsViewModel
@{
    ViewData["Title"] = Model.PageTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-0">
                        <i class="fas fa-warehouse me-2"></i>@Model.Name
                    </h1>
                    <p class="text-muted mb-0">
                        <i class="fas fa-map-marker-alt me-1"></i>@Model.Location
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success ms-2">
                                <i class="fas fa-check me-1"></i>Active
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-secondary ms-2">
                                <i class="fas fa-times me-1"></i>Inactive
                            </span>
                        }
                    </p>
                </div>
                <div class="btn-group">
                    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                    {
                        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">
                            <i class="fas fa-edit me-2"></i>Edit
                        </a>
                    }
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                </div>
            </div>

            <div class="row">
                <!-- Main Content -->
                <div class="col-lg-8">
                    <!-- Warehouse Information -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-info-circle me-2"></i>Warehouse Information
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label text-muted">Warehouse Name</label>
                                    <div class="fw-semibold">@Model.Name</div>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label text-muted">Location</label>
                                    <div class="fw-semibold">@Model.Location</div>
                                </div>
                                @if (!string.IsNullOrWhiteSpace(Model.Address))
                                {
                                    <div class="col-12">
                                        <label class="form-label text-muted">Full Address</label>
                                        <div class="fw-semibold">@Model.Address</div>
                                    </div>
                                }
                                @if (!string.IsNullOrWhiteSpace(Model.ContactPhone))
                                {
                                    <div class="col-md-6">
                                        <label class="form-label text-muted">Contact Phone</label>
                                        <div class="fw-semibold">
                                            <i class="fas fa-phone me-2"></i>@Model.ContactPhone
                                        </div>
                                    </div>
                                }
                                @if (!string.IsNullOrWhiteSpace(Model.ContactEmail))
                                {
                                    <div class="col-md-6">
                                        <label class="form-label text-muted">Contact Email</label>
                                        <div class="fw-semibold">
                                            <i class="fas fa-envelope me-2"></i>@Model.ContactEmail
                                        </div>
                                    </div>
                                }
                                <div class="col-md-6">
                                    <label class="form-label text-muted">Created Date</label>
                                    <div class="fw-semibold">@Model.CreatedAt.ToString("MMMM dd, yyyy")</div>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label text-muted">Last Updated</label>
                                    <div class="fw-semibold">@Model.UpdatedAt.ToString("MMMM dd, yyyy")</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Inventory Items -->
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-boxes me-2"></i>Inventory Items
                            </h5>
                            <div class="btn-group btn-group-sm">
                                <button class="btn btn-outline-primary active" onclick="showAllItems(this)">
                                    All (@Model.TotalProducts)
                                </button>
                                <button class="btn btn-outline-warning" onclick="showLowStockItems(this)">
                                    Low Stock (@Model.LowStockItemsCount)
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            @if (Model.InventoryItems.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-hover" id="inventoryTable">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Product</th>
                                                <th>SKU</th>
                                                <th class="text-end">Quantity</th>
                                                <th class="text-end">Reserved</th>
                                                <th class="text-end">Available</th>
                                                <th class="text-end">Value</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.InventoryItems)
                                            {
                                                <tr data-low-stock="@(item.Quantity <= item.MinimumStockLevel ? "true" : "false")">
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <i class="fas fa-box text-primary me-2"></i>
                                                            <div>
                                                                <div class="fw-semibold">@item.ProductName</div>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-light text-dark">@item.ProductSKU</span>
                                                    </td>
                                                    <td class="text-end">
                                                        <span class="fw-semibold">@item.Quantity.ToString("N0")</span>
                                                    </td>
                                                    <td class="text-end">
                                                        @if (item.ReservedQuantity > 0)
                                                        {
                                                            <span class="text-warning">@item.ReservedQuantity.ToString("N0")</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">0</span>
                                                        }
                                                    </td>
                                                    <td class="text-end">
                                                        <span class="fw-semibold">@((item.Quantity - item.ReservedQuantity).ToString("N0"))</span>
                                                    </td>
                                                    <td class="text-end">
                                                        <span class="text-success fw-semibold">$@((item.Quantity * item.ProductPrice).ToString("N2"))</span>
                                                    </td>
                                                    <td>
                                                        @if (item.Quantity <= item.MinimumStockLevel)
                                                        {
                                                            <span class="badge bg-warning">
                                                                <i class="fas fa-exclamation-triangle me-1"></i>Low Stock
                                                            </span>
                                                        }
                                                        else if (item.Quantity > item.MaximumStockLevel)
                                                        {
                                                            <span class="badge bg-info">
                                                                <i class="fas fa-arrow-up me-1"></i>Overstock
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-success">
                                                                <i class="fas fa-check me-1"></i>Normal
                                                            </span>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-5">
                                    <i class="fas fa-boxes fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">No Inventory Items</h5>
                                    <p class="text-muted">This warehouse doesn't contain any inventory items yet.</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Sidebar -->
                <div class="col-lg-4">
                    <!-- Summary Statistics -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-chart-pie me-2"></i>Summary
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-6">
                                    <div class="text-center">
                                        <div class="h4 mb-0 text-primary">@Model.TotalProducts</div>
                                        <small class="text-muted">Products</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="text-center">
                                        <div class="h4 mb-0 text-info">@Model.TotalQuantity.ToString("N0")</div>
                                        <small class="text-muted">Total Items</small>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="text-center">
                                        <div class="h4 mb-0 text-success">$@Model.TotalValue.ToString("N2")</div>
                                        <small class="text-muted">Total Value</small>
                                    </div>
                                </div>
                                @if (Model.LowStockItemsCount > 0)
                                {
                                    <div class="col-12">
                                        <div class="alert alert-warning py-2 mb-0">
                                            <i class="fas fa-exclamation-triangle me-2"></i>
                                            <strong>@Model.LowStockItemsCount</strong> items are low on stock
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Capacity Information -->
                    @if (Model.Capacity.HasValue)
                    {
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-tachometer-alt me-2"></i>Capacity
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <small class="text-muted">Utilization</small>
                                    <small class="fw-semibold @Model.CapacityStatusClass">
                                        @(Model.UtilizationPercentage?.ToString("F1") ?? "0.0")%
                                    </small>
                                </div>
                                <div class="progress mb-3" style="height: 8px;">
                                    <div class="progress-bar @(Model.CapacityStatus switch 
                                        { 
                                            "Low" => "bg-success", 
                                            "Medium" => "bg-warning", 
                                            "High" => "bg-danger", 
                                            "Critical" => "bg-danger", 
                                            _ => "bg-secondary" 
                                        })" 
                                         style="width: @Math.Min(Model.UtilizationPercentage ?? 0, 100)%"></div>
                                </div>
                                <div class="row g-2 small">
                                    <div class="col-6">
                                        <div class="text-muted">Used</div>
                                        <div class="fw-semibold">@Model.TotalQuantity.ToString("N0")</div>
                                    </div>
                                    <div class="col-6">
                                        <div class="text-muted">Capacity</div>
                                        <div class="fw-semibold">@Model.Capacity.Value.ToString("N0")</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Quick Actions -->
                    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                    {
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-bolt me-2"></i>Quick Actions
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="d-grid gap-2">
                                    <a href="@Url.Action("Index", "Inventory", new { warehouseId = Model.Id })" 
                                       class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-boxes me-2"></i>View All Inventory
                                    </a>
                                    <a href="@Url.Action("Index", "Inventory", new { warehouseId = Model.Id, lowStockOnly = true })" 
                                       class="btn btn-outline-warning btn-sm">
                                        <i class="fas fa-exclamation-triangle me-2"></i>Low Stock Items
                                    </a>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <hr class="my-2">
                                        <a href="@Url.Action("Delete", new { id = Model.Id })" 
                                           class="btn btn-outline-danger btn-sm">
                                            <i class="fas fa-trash me-2"></i>Delete Warehouse
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showAllItems(button) {
            const table = document.getElementById('inventoryTable');
            if (table) {
                const rows = table.querySelectorAll('tbody tr');
                rows.forEach(row => row.style.display = '');
            }
            
            // Update button states
            document.querySelectorAll('.btn-group .btn').forEach(btn => {
                btn.classList.remove('active');
                btn.classList.replace('btn-primary', 'btn-outline-primary');
                btn.classList.replace('btn-warning', 'btn-outline-warning');
            });
            button.classList.add('active');
            button.classList.replace('btn-outline-primary', 'btn-primary');
        }
        
        function showLowStockItems(button) {
            const table = document.getElementById('inventoryTable');
            if (table) {
                const rows = table.querySelectorAll('tbody tr');
                rows.forEach(row => {
                    const isLowStock = row.getAttribute('data-low-stock') === 'true';
                    row.style.display = isLowStock ? '' : 'none';
                });
            }
            
            // Update button states
            document.querySelectorAll('.btn-group .btn').forEach(btn => {
                btn.classList.remove('active');
                btn.classList.replace('btn-primary', 'btn-outline-primary');
                btn.classList.replace('btn-warning', 'btn-outline-warning');
            });
            button.classList.add('active');
            button.classList.replace('btn-outline-warning', 'btn-warning');
        }
    </script>
}
