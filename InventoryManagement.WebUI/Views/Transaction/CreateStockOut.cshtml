@model InventoryManagement.WebUI.ViewModels.Transactions.CreateStockOutViewModel

@{
    ViewData["Title"] = "Create Stock Out Transaction";
    ViewData["PageTitle"] = "Stock Out";
    ViewData["PageDescription"] = "Remove inventory from stock";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0">@ViewData["PageTitle"]</h4>
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Transaction")">Transactions</a></li>
                        <li class="breadcrumb-item active">Stock Out</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-8 col-lg-10 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-minus-circle text-warning me-2"></i>Create Stock Out Transaction
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="CreateStockOut" method="post" id="stockOutForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row g-3">
                            <!-- Product Selection -->
                            <div class="col-md-6">
                                <label asp-for="ProductId" class="form-label required">Product</label>
                                <select asp-for="ProductId" asp-items="Model.Products" class="form-select" required>
                                </select>
                                <span asp-validation-for="ProductId" class="text-danger"></span>
                            </div>

                            <!-- Warehouse Selection -->
                            <div class="col-md-6">
                                <label asp-for="WarehouseId" class="form-label required">Warehouse</label>
                                <select asp-for="WarehouseId" asp-items="Model.Warehouses" class="form-select" required>
                                </select>
                                <span asp-validation-for="WarehouseId" class="text-danger"></span>
                            </div>

                            <!-- Current Stock Display -->
                            <div class="col-12">
                                <div class="alert alert-info" id="stockAlert" style="display: none;">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-info-circle me-2"></i>
                                        <div>
                                            <strong>Current Stock:</strong> <span id="currentStockDisplay">-</span> units available
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Quantity -->
                            <div class="col-md-6">
                                <label asp-for="Quantity" class="form-label required">Quantity</label>
                                <input asp-for="Quantity" type="number" class="form-control" min="1" step="1" placeholder="Enter quantity to remove" required />
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                                <div class="form-text">Quantity to remove from stock</div>
                            </div>

                            <!-- Unit Cost -->
                            <div class="col-md-6">
                                <label asp-for="UnitCost" class="form-label">Unit Cost</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="UnitCost" type="number" class="form-control" min="0" step="0.01" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="UnitCost" class="text-danger"></span>
                                <div class="form-text">Cost per unit for valuation (optional)</div>
                            </div>

                            <!-- Reason -->
                            <div class="col-md-6">
                                <label asp-for="Reason" class="form-label">Reason</label>
                                <select asp-for="Reason" class="form-select">
                                    <option value="">-- Select Reason --</option>
                                    <option value="Sale">Sale to Customer</option>
                                    <option value="Transfer">Transfer to Another Location</option>
                                    <option value="Damage">Damaged/Defective</option>
                                    <option value="Loss">Lost/Stolen</option>
                                    <option value="Expiry">Expired/Obsolete</option>
                                    <option value="Sample">Sample/Demo</option>
                                    <option value="Other">Other</option>
                                </select>
                                <span asp-validation-for="Reason" class="text-danger"></span>
                            </div>

                            <!-- Reference Number -->
                            <div class="col-md-6">
                                <label asp-for="ReferenceNumber" class="form-label">Reference Number</label>
                                <input asp-for="ReferenceNumber" class="form-control" placeholder="SO#, Invoice#, etc." />
                                <span asp-validation-for="ReferenceNumber" class="text-danger"></span>
                                <div class="form-text">Sales order, invoice, or other reference</div>
                            </div>

                            <!-- Notes -->
                            <div class="col-12">
                                <label asp-for="Notes" class="form-label">Notes</label>
                                <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Additional notes or comments..."></textarea>
                                <span asp-validation-for="Notes" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Transaction Summary -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6 class="card-title">Transaction Summary</h6>
                                        <div class="row">
                                            <div class="col-md-3">
                                                <strong>Quantity:</strong> <span id="summaryQuantity">0</span> units
                                            </div>
                                            <div class="col-md-3">
                                                <strong>Unit Cost:</strong> $<span id="summaryUnitCost">0.00</span>
                                            </div>
                                            <div class="col-md-3">
                                                <strong>Total Value:</strong> $<span id="summaryTotalValue">0.00</span>
                                            </div>
                                            <div class="col-md-3">
                                                <strong>Remaining Stock:</strong> <span id="summaryRemainingStock">-</span> units
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Stock Warning -->
                        <div class="row mt-3" id="stockWarning" style="display: none;">
                            <div class="col-12">
                                <div class="alert alert-warning">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-exclamation-triangle me-2"></i>
                                        <div>
                                            <strong>Warning:</strong> <span id="warningMessage"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="d-flex gap-2 justify-content-end">
                                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                                        <i class="fas fa-times me-1"></i>Cancel
                                    </a>
                                    <button type="submit" class="btn btn-warning" id="submitBtn">
                                        <i class="fas fa-minus-circle me-1"></i>Create Stock Out Transaction
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        $(document).ready(function() {
            var currentStock = 0;

            // Load current stock when product and warehouse are selected
            function loadCurrentStock() {
                var productId = $('#ProductId').val();
                var warehouseId = $('#WarehouseId').val();

                if (productId && warehouseId) {
                    $.get('@Url.Action("GetCurrentStock")', { productId: productId, warehouseId: warehouseId })
                        .done(function(data) {
                            if (data.success) {
                                currentStock = data.currentStock || 0;
                                $('#currentStockDisplay').text(currentStock.toLocaleString());
                                $('#stockAlert').show();
                                updateSummary();
                            }
                        })
                        .fail(function() {
                            $('#stockAlert').hide();
                            currentStock = 0;
                        });
                } else {
                    $('#stockAlert').hide();
                    currentStock = 0;
                }
            }

            // Calculate remaining stock and total value
            function updateSummary() {
                var quantity = parseInt($('#Quantity').val()) || 0;
                var unitCost = parseFloat($('#UnitCost').val()) || 0;
                var totalValue = quantity * unitCost;
                var remainingStock = currentStock - quantity;

                $('#summaryQuantity').text(quantity.toLocaleString());
                $('#summaryUnitCost').text(unitCost.toFixed(2));
                $('#summaryTotalValue').text(totalValue.toFixed(2));
                $('#summaryRemainingStock').text(remainingStock.toLocaleString());

                // Show warnings
                if (quantity > currentStock) {
                    $('#warningMessage').text('Requested quantity exceeds available stock!');
                    $('#stockWarning').show();
                    $('#submitBtn').prop('disabled', true);
                } else if (remainingStock === 0) {
                    $('#warningMessage').text('This will deplete all stock for this product in this warehouse.');
                    $('#stockWarning').show();
                    $('#submitBtn').prop('disabled', false);
                } else {
                    $('#stockWarning').hide();
                    $('#submitBtn').prop('disabled', false);
                }
            }

            // Event handlers
            $('#ProductId, #WarehouseId').change(loadCurrentStock);
            $('#Quantity, #UnitCost').on('input', updateSummary);

            // Initialize
            loadCurrentStock();
            updateSummary();

            // Form validation
            $('#stockOutForm').on('submit', function(e) {
                var quantity = parseInt($('#Quantity').val());
                var productId = $('#ProductId').val();
                var warehouseId = $('#WarehouseId').val();

                if (!productId) {
                    e.preventDefault();
                    alert('Please select a product.');
                    return false;
                }

                if (!warehouseId) {
                    e.preventDefault();
                    alert('Please select a warehouse.');
                    return false;
                }

                if (!quantity || quantity <= 0) {
                    e.preventDefault();
                    alert('Please enter a valid quantity greater than zero.');
                    return false;
                }

                if (quantity > currentStock) {
                    e.preventDefault();
                    alert('Requested quantity exceeds available stock (' + currentStock + ' units).');
                    return false;
                }

                // Confirm if depleting all stock
                if ((currentStock - quantity) === 0) {
                    if (!confirm('This will deplete all stock for this product in this warehouse. Are you sure?')) {
                        e.preventDefault();
                        return false;
                    }
                }

                // Disable submit button to prevent double submission
                $('#submitBtn').prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-1"></i>Creating...');
            });

            // Enable enhanced select dropdowns if Select2 is available
            if (typeof $.fn.select2 !== 'undefined') {
                $('#ProductId, #WarehouseId').select2({
                    theme: 'bootstrap-5',
                    width: '100%'
                });
            }
        });
    </script>
}
