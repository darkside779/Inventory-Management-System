@model InventoryManagement.WebUI.ViewModels.Transactions.TransactionIndexViewModel

@{
    ViewData["Title"] = "Transactions";
    ViewData["PageTitle"] = "Transaction Management";
    ViewData["PageDescription"] = "Manage inventory transactions and stock movements";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0">@ViewData["PageTitle"]</h4>
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
                        <li class="breadcrumb-item active">Transactions</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="d-flex flex-wrap gap-2">
                @if (User.IsInRole("Administrator") || User.IsInRole("Manager"))
                {
                    <a href="@Url.Action("CreateStockIn")" class="btn btn-success">
                        <i class="fas fa-plus-circle me-1"></i>Stock In
                    </a>
                }
                @if (User.IsInRole("Administrator") || User.IsInRole("Manager") || User.IsInRole("Staff"))
                {
                    <a href="@Url.Action("CreateStockOut")" class="btn btn-warning">
                        <i class="fas fa-minus-circle me-1"></i>Stock Out
                    </a>
                }
                @if (User.IsInRole("Administrator") || User.IsInRole("Manager"))
                {
                    <a href="@Url.Action("CreateAdjustment")" class="btn btn-info">
                        <i class="fas fa-adjust me-1"></i>Adjustment
                    </a>
                }
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-filter me-1"></i>Filters
                        <button class="btn btn-sm btn-outline-secondary ms-2" type="button" data-bs-toggle="collapse" data-bs-target="#filtersCollapse">
                            <i class="fas fa-chevron-down"></i>
                        </button>
                    </h5>
                </div>
                <div class="collapse show" id="filtersCollapse">
                    <div class="card-body">
                        <form method="get" asp-action="Index" id="filterForm">
                            <div class="row g-3">
                                <div class="col-md-3">
                                    <label asp-for="Filter.SearchTerm" class="form-label">Search</label>
                                    <input asp-for="Filter.SearchTerm" class="form-control" placeholder="Search transactions..." />
                                </div>
                                <div class="col-md-2">
                                    <label asp-for="Filter.ProductId" class="form-label">Product</label>
                                    <select asp-for="Filter.ProductId" asp-items="Model.Products" class="form-select">
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <label asp-for="Filter.WarehouseId" class="form-label">Warehouse</label>
                                    <select asp-for="Filter.WarehouseId" asp-items="Model.Warehouses" class="form-select">
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <label asp-for="Filter.TransactionType" class="form-label">Type</label>
                                    <select asp-for="Filter.TransactionType" asp-items="Model.TransactionTypes" class="form-select">
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <label asp-for="Filter.StartDate" class="form-label">From Date</label>
                                    <input asp-for="Filter.StartDate" type="date" class="form-control" />
                                </div>
                                <div class="col-md-1">
                                    <label class="form-label">&nbsp;</label>
                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="row g-3 mt-1">
                                <div class="col-md-2">
                                    <label asp-for="Filter.EndDate" class="form-label">To Date</label>
                                    <input asp-for="Filter.EndDate" type="date" class="form-control" />
                                </div>
                                <div class="col-md-2">
                                    <label asp-for="Filter.SortBy" class="form-label">Sort By</label>
                                    <select asp-for="Filter.SortBy" class="form-select">
                                        <option value="Timestamp">Date</option>
                                        <option value="ProductName">Product</option>
                                        <option value="WarehouseName">Warehouse</option>
                                        <option value="Type">Type</option>
                                        <option value="Quantity">Quantity</option>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <label asp-for="Filter.SortDirection" class="form-label">Direction</label>
                                    <select asp-for="Filter.SortDirection" class="form-select">
                                        <option value="desc">Newest First</option>
                                        <option value="asc">Oldest First</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">&nbsp;</label>
                                    <div class="d-flex gap-2">
                                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                                            <i class="fas fa-times me-1"></i>Clear
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Results -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-exchange-alt me-1"></i>Transactions
                        @if (Model.Pagination.TotalCount > 0)
                        {
                            <span class="badge bg-primary ms-2">@Model.Pagination.TotalCount</span>
                        }
                    </h5>
                    @if (Model.Pagination.TotalCount > 0)
                    {
                        <span class="text-muted">
                            Showing @Model.Pagination.StartItem - @Model.Pagination.EndItem of @Model.Pagination.TotalCount
                        </span>
                    }
                </div>
                <div class="card-body p-0">
                    @if (Model.Transactions.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-striped mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Date/Time</th>
                                        <th>Type</th>
                                        <th>Product</th>
                                        <th>Warehouse</th>
                                        <th class="text-end">Quantity</th>
                                        <th class="text-end">Unit Cost</th>
                                        <th class="text-end">Total Value</th>
                                        <th>Reference</th>
                                        <th>User</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var transaction in Model.Transactions)
                                    {
                                        <tr>
                                            <td>
                                                <div class="fw-medium">@transaction.TransactionDate.ToString("MMM dd, yyyy")</div>
                                                <small class="text-muted">@transaction.TransactionDate.ToString("HH:mm")</small>
                                            </td>
                                            <td>
                                                @switch (transaction.Type)
                                                {
                                                    case InventoryManagement.Domain.Enums.TransactionType.StockIn:
                                                        <span class="badge bg-success">
                                                            <i class="fas fa-plus me-1"></i>Stock In
                                                        </span>
                                                        break;
                                                    case InventoryManagement.Domain.Enums.TransactionType.StockOut:
                                                        <span class="badge bg-warning">
                                                            <i class="fas fa-minus me-1"></i>Stock Out
                                                        </span>
                                                        break;
                                                    case InventoryManagement.Domain.Enums.TransactionType.Adjustment:
                                                        <span class="badge bg-info">
                                                            <i class="fas fa-adjust me-1"></i>Adjustment
                                                        </span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <div class="fw-medium">@transaction.ProductName</div>
                                                <small class="text-muted">@transaction.ProductSKU</small>
                                            </td>
                                            <td>@transaction.WarehouseName</td>
                                            <td class="text-end">
                                                @if (transaction.Quantity > 0)
                                                {
                                                    <span class="text-success">+@transaction.Quantity.ToString("N0")</span>
                                                }
                                                else
                                                {
                                                    <span class="text-danger">@transaction.Quantity.ToString("N0")</span>
                                                }
                                            </td>
                                            <td class="text-end">
                                                @if (transaction.UnitPrice.HasValue)
                                                {
                                                    @transaction.UnitPrice.Value.ToString("C")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td class="text-end">
                                                @if (transaction.TotalValue.HasValue)
                                                {
                                                    @transaction.TotalValue.Value.ToString("C")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(transaction.ReferenceNumber))
                                                {
                                                    @transaction.ReferenceNumber
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>@transaction.UserName</td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Details", new { id = transaction.Id })" 
                                                       class="btn btn-sm btn-outline-primary"
                                                       title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        @if (Model.Pagination.TotalPages > 1)
                        {
                            <div class="card-footer">
                                <nav aria-label="Transaction pagination">
                                    <ul class="pagination pagination-sm justify-content-center mb-0">
                                        @if (Model.Pagination.HasPreviousPage)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" href="@Url.Action("Index", new { pageNumber = Model.Pagination.PageNumber - 1, pageSize = Model.Pagination.PageSize })">
                                                    <i class="fas fa-chevron-left"></i>
                                                </a>
                                            </li>
                                        }

                                        @for (int i = Math.Max(1, Model.Pagination.PageNumber - 2); i <= Math.Min(Model.Pagination.TotalPages, Model.Pagination.PageNumber + 2); i++)
                                        {
                                            <li class="page-item @(i == Model.Pagination.PageNumber ? "active" : "")">
                                                <a class="page-link" href="@Url.Action("Index", new { pageNumber = i, pageSize = Model.Pagination.PageSize })">@i</a>
                                            </li>
                                        }

                                        @if (Model.Pagination.HasNextPage)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" href="@Url.Action("Index", new { pageNumber = Model.Pagination.PageNumber + 1, pageSize = Model.Pagination.PageSize })">
                                                    <i class="fas fa-chevron-right"></i>
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </nav>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-exchange-alt fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No transactions found</h5>
                            <p class="text-muted">Try adjusting your search criteria or create a new transaction.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-submit form when filters change
            $('#filterForm select, #filterForm input[type="date"]').change(function() {
                $(this).closest('form').submit();
            });
        });
    </script>
}
