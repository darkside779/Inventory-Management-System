@model InventoryManagement.WebUI.ViewModels.Suppliers.CreateSupplierViewModel
@{
    ViewData["Title"] = Model.PageTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 col-xl-6 mx-auto">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="card-title mb-0">
                                <i class="fas fa-truck me-2"></i>@Model.PageTitle
                            </h4>
                            <p class="text-muted mb-0">Add a new supplier to the system</p>
                        </div>
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()
                        
                        <div class="row g-4">
                            <!-- Basic Information -->
                            <div class="col-12">
                                <h6 class="text-primary border-bottom pb-2 mb-3">
                                    <i class="fas fa-info-circle me-2"></i>Basic Information
                                </h6>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label required">Supplier Name</label>
                                <input asp-for="Name" class="form-control" placeholder="Enter supplier name" required>
                                <span asp-validation-for="Name" class="text-danger"></span>
                                <div class="form-text">A unique name to identify this supplier</div>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="ContactPerson" class="form-label">Contact Person</label>
                                <input asp-for="ContactPerson" class="form-control" placeholder="Enter contact person name">
                                <span asp-validation-for="ContactPerson" class="text-danger"></span>
                                <div class="form-text">Primary contact person at the supplier</div>
                            </div>
                            
                            <!-- Contact Information -->
                            <div class="col-12">
                                <h6 class="text-primary border-bottom pb-2 mb-3 mt-4">
                                    <i class="fas fa-phone me-2"></i>Contact Information
                                </h6>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="Phone" class="form-label">Phone Number</label>
                                <input asp-for="Phone" class="form-control" placeholder="Enter phone number" type="tel">
                                <span asp-validation-for="Phone" class="text-danger"></span>
                                <div class="form-text">Primary contact phone number</div>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label">Email Address</label>
                                <input asp-for="Email" class="form-control" placeholder="Enter email address" type="email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                                <div class="form-text">Primary contact email address</div>
                            </div>
                            
                            <div class="col-12">
                                <label asp-for="Address" class="form-label">Address</label>
                                <textarea asp-for="Address" class="form-control" rows="3" placeholder="Enter complete address (optional)"></textarea>
                                <span asp-validation-for="Address" class="text-danger"></span>
                                <div class="form-text">Complete address including street, city, postal code</div>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="Website" class="form-label">Website</label>
                                <input asp-for="Website" class="form-control" placeholder="https://example.com" type="url">
                                <span asp-validation-for="Website" class="text-danger"></span>
                                <div class="form-text">Company website URL</div>
                            </div>
                            
                            <!-- Business Information -->
                            <div class="col-12">
                                <h6 class="text-primary border-bottom pb-2 mb-3 mt-4">
                                    <i class="fas fa-building me-2"></i>Business Information
                                </h6>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="TaxNumber" class="form-label">Tax ID Number</label>
                                <input asp-for="TaxNumber" class="form-control" placeholder="Enter tax identification number">
                                <span asp-validation-for="TaxNumber" class="text-danger"></span>
                                <div class="form-text">Tax identification number (optional)</div>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="PaymentTerms" class="form-label">Payment Terms</label>
                                <input asp-for="PaymentTerms" class="form-control" placeholder="e.g., Net 30, COD">
                                <span asp-validation-for="PaymentTerms" class="text-danger"></span>
                                <div class="form-text">Payment terms and conditions</div>
                            </div>
                            
                            <div class="col-md-6">
                                <label class="form-label">Status</label>
                                <div class="form-check form-switch">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" checked>
                                    <label asp-for="IsActive" class="form-check-label">
                                        <span id="statusText">Active</span>
                                    </label>
                                </div>
                                <div class="form-text">Enable supplier for business operations</div>
                            </div>
                        </div>
                        
                        <!-- Guidelines Panel -->
                        <div class="alert alert-info mt-4">
                            <h6 class="alert-heading">
                                <i class="fas fa-lightbulb me-2"></i>Guidelines
                            </h6>
                            <ul class="mb-0">
                                <li><strong>Name:</strong> Use the official company name for consistency</li>
                                <li><strong>Contact Person:</strong> Specify the primary contact for orders and inquiries</li>
                                <li><strong>Contact Info:</strong> Provide accurate contact information for communication</li>
                                <li><strong>Payment Terms:</strong> Clear terms help avoid payment disputes</li>
                                <li><strong>Status:</strong> New suppliers are active by default and ready for business</li>
                            </ul>
                        </div>
                        
                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-end gap-2 mt-4 pt-3 border-top">
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Create Supplier
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Toggle status text
            const isActiveCheckbox = document.getElementById('IsActive');
            const statusText = document.getElementById('statusText');
            
            function updateStatusText() {
                statusText.textContent = isActiveCheckbox.checked ? 'Active' : 'Inactive';
                statusText.className = isActiveCheckbox.checked ? 'text-success' : 'text-muted';
            }
            
            if (isActiveCheckbox && statusText) {
                isActiveCheckbox.addEventListener('change', updateStatusText);
                updateStatusText(); // Initial state
            }
            
            // Real-time validation feedback
            const form = document.querySelector('.needs-validation');
            const inputs = form.querySelectorAll('input[required], textarea[required]');
            
            inputs.forEach(input => {
                input.addEventListener('blur', function() {
                    if (this.value.trim()) {
                        this.classList.remove('is-invalid');
                        this.classList.add('is-valid');
                    } else {
                        this.classList.remove('is-valid');
                        this.classList.add('is-invalid');
                    }
                });
                
                input.addEventListener('input', function() {
                    if (this.classList.contains('is-invalid') && this.value.trim()) {
                        this.classList.remove('is-invalid');
                        this.classList.add('is-valid');
                    }
                });
            });
            
            // Form submission validation
            form.addEventListener('submit', function(event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                    
                    // Focus on first invalid field
                    const firstInvalid = form.querySelector(':invalid');
                    if (firstInvalid) {
                        firstInvalid.focus();
                    }
                }
                
                form.classList.add('was-validated');
            });
            
            // Phone number formatting (basic)
            const phoneInput = document.getElementById('Phone');
            if (phoneInput) {
                phoneInput.addEventListener('input', function() {
                    // Remove non-numeric characters except +, -, (, ), and spaces
                    let value = this.value.replace(/[^\d\+\-\(\)\s]/g, '');
                    this.value = value;
                });
            }
            
            // Website URL validation
            const websiteInput = document.getElementById('Website');
            if (websiteInput) {
                websiteInput.addEventListener('blur', function() {
                    if (this.value && !this.value.startsWith('http://') && !this.value.startsWith('https://')) {
                        this.value = 'https://' + this.value;
                    }
                });
            }
        });
    </script>
}
