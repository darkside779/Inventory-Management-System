@model InventoryManagement.WebUI.ViewModels.Suppliers.SupplierIndexViewModel
@{
    ViewData["Title"] = Model.PageTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-0">
                        <i class="fas fa-truck me-2"></i>@Model.PageTitle
                    </h1>
                    <p class="text-muted mb-0">Manage suppliers and vendor relationships</p>
                </div>
                <div>
                    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                    {
                        <a href="@Url.Action("Create")" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Add Supplier
                        </a>
                    }
                </div>
            </div>

            <!-- Search and Filter Panel -->
            <div class="card mb-4">
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-4">
                            <label for="searchTerm" class="form-label">Search</label>
                            <input type="text" class="form-control" id="searchTerm" name="searchTerm" 
                                   value="@Model.SearchTerm" placeholder="Search suppliers...">
                        </div>
                        <div class="col-md-2">
                            <label for="pageSize" class="form-label">Page Size</label>
                            <select class="form-select" id="pageSize" name="pageSize">
                                <option value="10" selected="@(Model.PageSize == 10)">10</option>
                                <option value="25" selected="@(Model.PageSize == 25)">25</option>
                                <option value="50" selected="@(Model.PageSize == 50)">50</option>
                                <option value="100" selected="@(Model.PageSize == 100)">100</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">&nbsp;</label>
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-outline-primary flex-fill">
                                    <i class="fas fa-search me-1"></i>Search
                                </button>
                                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                                    <i class="fas fa-times me-1"></i>Clear
                                </a>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">&nbsp;</label>
                            <div class="d-flex flex-column gap-1">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="activeOnly" name="activeOnly" 
                                           value="true" checked="@Model.ActiveOnly">
                                    <label class="form-check-label" for="activeOnly">
                                        Active suppliers only
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="withProductsOnly" name="withProductsOnly" 
                                           value="true" checked="@Model.WithProductsOnly">
                                    <label class="form-check-label" for="withProductsOnly">
                                        With products only
                                    </label>
                                </div>
                            </div>
                        </div>
                        <input type="hidden" name="sortBy" value="@Model.SortBy">
                        <input type="hidden" name="sortDirection" value="@Model.SortDirection">
                    </form>
                </div>
            </div>

            <!-- Results Summary -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="text-muted">
                    Showing @((Model.CurrentPage - 1) * Model.PageSize + 1) to 
                    @Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalCount) of 
                    @Model.TotalCount suppliers
                </div>
                <div class="dropdown">
                    <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="fas fa-sort me-1"></i>Sort by @Model.SortBy
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="@Url.Action("Index", new { 
                            searchTerm = Model.SearchTerm, activeOnly = Model.ActiveOnly, withProductsOnly = Model.WithProductsOnly, pageSize = Model.PageSize,
                            sortBy = "Name", sortDirection = Model.SortDirection == "asc" ? "desc" : "asc" })">
                            Name @(Model.SortBy == "Name" ? (Model.SortDirection == "asc" ? "↓" : "↑") : "")
                        </a></li>
                        <li><a class="dropdown-item" href="@Url.Action("Index", new { 
                            searchTerm = Model.SearchTerm, activeOnly = Model.ActiveOnly, withProductsOnly = Model.WithProductsOnly, pageSize = Model.PageSize,
                            sortBy = "ContactPerson", sortDirection = Model.SortDirection == "asc" ? "desc" : "asc" })">
                            Contact Person @(Model.SortBy == "ContactPerson" ? (Model.SortDirection == "asc" ? "↓" : "↑") : "")
                        </a></li>
                        <li><a class="dropdown-item" href="@Url.Action("Index", new { 
                            searchTerm = Model.SearchTerm, activeOnly = Model.ActiveOnly, withProductsOnly = Model.WithProductsOnly, pageSize = Model.PageSize,
                            sortBy = "Email", sortDirection = Model.SortDirection == "asc" ? "desc" : "asc" })">
                            Email @(Model.SortBy == "Email" ? (Model.SortDirection == "asc" ? "↓" : "↑") : "")
                        </a></li>
                        <li><a class="dropdown-item" href="@Url.Action("Index", new { 
                            searchTerm = Model.SearchTerm, activeOnly = Model.ActiveOnly, withProductsOnly = Model.WithProductsOnly, pageSize = Model.PageSize,
                            sortBy = "ProductCount", sortDirection = Model.SortDirection == "asc" ? "desc" : "asc" })">
                            Product Count @(Model.SortBy == "ProductCount" ? (Model.SortDirection == "asc" ? "↓" : "↑") : "")
                        </a></li>
                        <li><a class="dropdown-item" href="@Url.Action("Index", new { 
                            searchTerm = Model.SearchTerm, activeOnly = Model.ActiveOnly, withProductsOnly = Model.WithProductsOnly, pageSize = Model.PageSize,
                            sortBy = "CreatedAt", sortDirection = Model.SortDirection == "asc" ? "desc" : "asc" })">
                            Created Date @(Model.SortBy == "CreatedAt" ? (Model.SortDirection == "asc" ? "↓" : "↑") : "")
                        </a></li>
                    </ul>
                </div>
            </div>

            <!-- Suppliers Table -->
            @if (Model.Suppliers.Any())
            {
                <div class="card">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Supplier</th>
                                    <th>Contact Info</th>
                                    <th>Products</th>
                                    <th>Status</th>
                                    <th>Last Updated</th>
                                    <th width="180">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var supplier in Model.Suppliers)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-truck text-primary me-3"></i>
                                                <div>
                                                    <div class="fw-semibold">@supplier.Name</div>
                                                    @if (!string.IsNullOrWhiteSpace(supplier.ContactPerson))
                                                    {
                                                        <small class="text-muted">
                                                            <i class="fas fa-user me-1"></i>@supplier.ContactPerson
                                                        </small>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="small">
                                                @if (!string.IsNullOrWhiteSpace(supplier.Phone))
                                                {
                                                    <div>
                                                        <i class="fas fa-phone me-1 text-muted"></i>@supplier.Phone
                                                    </div>
                                                }
                                                @if (!string.IsNullOrWhiteSpace(supplier.Email))
                                                {
                                                    <div>
                                                        <i class="fas fa-envelope me-1 text-muted"></i>@supplier.Email
                                                    </div>
                                                }
                                                @if (!string.IsNullOrWhiteSpace(supplier.Address))
                                                {
                                                    <div>
                                                        <i class="fas fa-map-marker-alt me-1 text-muted"></i>@supplier.Address
                                                    </div>
                                                }
                                            </div>
                                        </td>
                                        <td>
                                            @if (supplier.ProductCount > 0)
                                            {
                                                <span class="badge bg-info">@supplier.ProductCount</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">No products</span>
                                            }
                                        </td>
                                        <td>
                                            @if (supplier.IsActive)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check me-1"></i>Active
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">
                                                    <i class="fas fa-times me-1"></i>Inactive
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            <small class="text-muted">
                                                @supplier.UpdatedAt.ToString("MMM dd, yyyy")
                                            </small>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="@Url.Action("Details", new { id = supplier.Id })" 
                                                   class="btn btn-sm btn-outline-primary" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                                                {
                                                    <a href="@Url.Action("Edit", new { id = supplier.Id })" 
                                                       class="btn btn-sm btn-outline-secondary" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-outline-info" 
                                                            onclick="toggleSupplierStatus(@supplier.Id, @supplier.IsActive.ToString().ToLower())"
                                                            title="@(supplier.IsActive ? "Deactivate" : "Activate")">
                                                        <i class="fas fa-@(supplier.IsActive ? "pause" : "play")"></i>
                                                    </button>
                                                }
                                                @if (User.IsInRole("Admin"))
                                                {
                                                    <a href="@Url.Action("Delete", new { id = supplier.Id })" 
                                                       class="btn btn-sm btn-outline-danger" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Supplier pagination" class="mt-4">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { 
                                    pageNumber = Model.CurrentPage - 1, pageSize = Model.PageSize,
                                    searchTerm = Model.SearchTerm, activeOnly = Model.ActiveOnly, withProductsOnly = Model.WithProductsOnly,
                                    sortBy = Model.SortBy, sortDirection = Model.SortDirection })">Previous</a>
                            </li>

                            @{
                                var startPage = Math.Max(1, Model.CurrentPage - 2);
                                var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
                            }

                            @for (int i = startPage; i <= endPage; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Index", new { 
                                        pageNumber = i, pageSize = Model.PageSize,
                                        searchTerm = Model.SearchTerm, activeOnly = Model.ActiveOnly, withProductsOnly = Model.WithProductsOnly,
                                        sortBy = Model.SortBy, sortDirection = Model.SortDirection })">@i</a>
                                </li>
                            }

                            <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { 
                                    pageNumber = Model.CurrentPage + 1, pageSize = Model.PageSize,
                                    searchTerm = Model.SearchTerm, activeOnly = Model.ActiveOnly, withProductsOnly = Model.WithProductsOnly,
                                    sortBy = Model.SortBy, sortDirection = Model.SortDirection })">Next</a>
                            </li>
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-truck fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No Suppliers Found</h5>
                        <p class="text-muted mb-4">
                            @if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
                            {
                                <span>No suppliers match your search criteria.</span>
                            }
                            else
                            {
                                <span>No suppliers have been created yet.</span>
                            }
                        </p>
                        @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                        {
                            <a href="@Url.Action("Create")" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Add First Supplier
                            </a>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        async function toggleSupplierStatus(supplierId, isActive) {
            const action = isActive ? 'deactivate' : 'activate';
            if (!confirm(`Are you sure you want to ${action} this supplier?`)) {
                return;
            }

            try {
                const response = await fetch(`@Url.Action("ToggleStatus")`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    body: JSON.stringify({ id: supplierId })
                });

                const result = await response.json();

                if (result.success) {
                    // Show success message and refresh page
                    showNotification(result.message, 'success');
                    setTimeout(() => location.reload(), 1500);
                } else {
                    showNotification(result.message || 'Error updating supplier status', 'error');
                }
            } catch (error) {
                showNotification('Network error occurred', 'error');
            }
        }

        function showNotification(message, type) {
            // Simple notification system
            const alertClass = type === 'success' ? 'alert-success' : 'alert-danger';
            const alertHtml = `
                <div class="alert ${alertClass} alert-dismissible fade show" role="alert">
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;
            
            const container = document.querySelector('.container-fluid');
            container.insertAdjacentHTML('afterbegin', alertHtml);
        }
    </script>
}
